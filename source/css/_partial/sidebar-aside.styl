#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  background: color-widget-background
  border: 1px solid color-widget-border
  padding: 15px
  border-radius: 3px
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
      color: color-link-dark
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
  ol.toc, ul.toc
    margin-left: 0
    list-style: none
    a
      display:inline-block
      width:100%
    a.anchor
      font-size: 1.2em 
      font-family: font-mono
      padding: 10px 0
  ul.toc-child, ol.toc-child
    list-style: none


#sidebar.fixed
  position: absolute

.recents
  padding: 0
  li
    border-bottom: 1px solid color-widget-border
    padding: 10px 15px
    margin:-1px
    font-weight: bold